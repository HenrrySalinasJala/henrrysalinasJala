{
    "compilerOptions": {
      "module": "commonjs", 
      "target": "es6",
      "baseUrl": ".",
      "jsx": "preserve",
      "paths": {
        "*": ["*", "src/config/*", "src/*", "__tests__/*"],
        "@config/*": ["src/config/*"],
        "@src/*": ["src/*"],
        "@tests/*": ["__tests__/*"],
      }
    },
    "exclude": ["node_modules"]
}
